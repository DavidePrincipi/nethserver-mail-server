#
# Postfix to Dovecot communcations for SMTP AUTH
# See http://www.postfix.org/SASL_README.html
#

service auth \{
    unix_listener smtpauth \{
       path = /var/spool/postfix/private/smtpauth
       mode = 00660
       user = postfix
       group = postfix
    \}
\}

auth_mechanisms = plain login gssapi

