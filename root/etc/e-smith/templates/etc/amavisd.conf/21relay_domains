{
    #
    # 21relay_domains -- add relay domains to the list of local domains. Refs #3148
    #
    use esmith::DomainsDB;
    my $domainsDb = esmith::DomainsDB->open_ro();

    @domainList = (@domainList, map { $_->key } grep{ ($_->prop('TransportType') || '') eq 'Relay' } $domainsDb->domains());

    '';
}